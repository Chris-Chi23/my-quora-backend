{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./src/app/@types", "node_modules/@types"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts",
    "./src/app/@types"
  ]
}
